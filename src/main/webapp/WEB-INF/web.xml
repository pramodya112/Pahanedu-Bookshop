<?xml version="1.0" encoding="UTF-8"?>
<element> 
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>com.example.control.LoginControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/LoginControl</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>AdminDashboard</servlet-name>
    <jsp-file>/adminDashboard.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>AdminDashboard</servlet-name>
    <url-pattern>/adminDashboard</url-pattern>
</servlet-mapping>
<filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.example.filter.AuthFilter</filter-class>
</filter>
<filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/adminDashboard</url-pattern>
</filter-mapping>
    <servlet>
        <servlet-name>ManageStaffControl</servlet-name>
        <servlet-class>com.example.control.ManageStaffControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageStaffControl</servlet-name>
        <url-pattern>/manageStaff</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StaffManageCustomersControl</servlet-name>
        <servlet-class>com.example.control.StaffManageCustomersControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffManageCustomersControl</servlet-name>
        <url-pattern>/staffManageCustomers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StaffManageItemsControl</servlet-name>
        <servlet-class>com.example.control.StaffManageItemsControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffManageItemsControl</servlet-name>
        <url-pattern>/staffManageItems</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>
</web-app>
</element>